<%- include("../partials/header"); %>

<%- include("../partials/navigation_bar"); %>

    <main>
        <section class="container ">
            <div class="row mt-5">
                <div class="col-12 text-left">
                    <h1 id="consulta">Comprar dos Produtos</h1>
                </div>
            </div>
            <div class="row my-5">
                <div class="col-12">
                    <form id="form" action="" method="POST">
                        <div class="form-group">
                            <label for="produto">Produto</label>
                            <select class="form-control" name="produto_id" id="produto">
                                <option selected>Escolha o Produto</option>
                                <% produtos.forEach(function(produto){ %>
                                    <option value="<%= produto.id %>"><%= produto.nome %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="nota_fiscal">Nota Fiscal</label>
                            <input class="form-control" type="text" id="nota_fiscal" name="nf" placeholder="Nota Fiscal" required>
                        </div>
                        <div class="form-group">
                            <label for="quantidade">Quantidade</label>
                            <input class="form-control" type="text" id="quantidade" name="quantidade" placeholder="Quantidade" required>
                        </div>
                        <div class="form-group">
                            <label for="total">Total</label>
                            <input class="form-control" type="text" id="total" name="total" placeholder="Total" required>
                        </div>
                
                        <div>
                            <input class="btn btn-success" type="submit" value="Salvar">
                        </div>
                    </form>

                </div>
            </div>
        </section>
    </main>











    <%- include("../partials/footer"); %>
    <script src="js/compras_cadastrar.js"></script>